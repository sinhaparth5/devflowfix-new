# Stage 1: Builder
FROM cgr.dev/chainguard/python:latest-dev AS builder
WORKDIR /build

# Install build AND runtime dependencies
USER root
RUN apk add --no-cache \
    build-base \
    postgresql-dev \
    libpq

USER nonroot
COPY --chown=nonroot:nonroot requirements.txt .
RUN pip install --user --no-cache-dir -r requirements.txt

COPY --chown=nonroot:nonroot app ./app
RUN python -m compileall -q app/

# Stage 2: Runtime - Minimal production image
FROM cgr.dev/chainguard/python:latest

LABEL maintainer="Parth Sinha and Shine Gupta"

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH="/app:/home/nonroot/.local/lib/python3.12/site-packages"

WORKDIR /app

USER nonroot

# Copy runtime libraries from builder (read-only)
COPY --from=builder /usr/lib/libpq.so* /usr/lib/
COPY --from=builder /usr/lib/postgresql* /usr/lib/

# Copy installed packages and compiled app with read-only permissions
COPY --from=builder --chown=nonroot:nonroot --chmod=555 /home/nonroot/.local /home/nonroot/.local
COPY --from=builder --chown=nonroot:nonroot --chmod=555 /build/app ./app

EXPOSE 8000

# Chainguard Python images have ENTRYPOINT set to python, so just use CMD
CMD ["-m", "gunicorn", "app.main:app", \
     "--worker-class", "uvicorn.workers.UvicornWorker", \
     "--workers", "4", \
     "--worker-connections", "1000", \
     "--bind", "0.0.0.0:8000", \
     "--timeout", "60", \
     "--keep-alive", "5", \
     "--max-requests", "10000", \
     "--max-requests-jitter", "1000", \
     "--graceful-timeout", "30", \
     "--access-logfile", "-", \
     "--error-logfile", "-", \
     "--log-level", "info", \
     "--preload"]
